<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/edit_tdialog_album_image"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:padding="8sp"
            app:srcCompat="@drawable/music" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/edit_tdialog_song_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Song title" />

            <TextView
                android:id="@+id/edit_tdialog_singer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Singer" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/edit_tdialog_song_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Song path:" />

    <Button
        android:id="@+id/edit_tdialog_edit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="修改歌曲信息" />

</LinearLayout>